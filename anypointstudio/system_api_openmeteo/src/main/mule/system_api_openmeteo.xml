    <apikit:config name="system_api_openmeteo-config" api="resource::1782ea4a-5a87-4bb9-8106-5f1c978c57b1:system_api_openmeteo:1.0.0:raml:zip:system_api_openmeteo.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
